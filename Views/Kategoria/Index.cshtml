@model IEnumerable<HprEnd.Models.Film_Kategoria>


@{
    ViewData["Title"] = "Index";
}

<h1>Lista Kategori</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nazwa)
            </th>
            <th>
                <a asp-action="Create">Dodaj Nowa</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nazwa)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID_Kategoria">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID_Kategoria">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
